    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server!",
            "program": "${workspaceFolder}/server/Server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Server via NPM",
            "request": "launch",
            "runtimeArgs": [
                "${fileBasename}/server/",
                "run-script",
                "debug"
            ],  
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        
        
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch VolaTALK Local Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/App.js"
        }
    ]
}