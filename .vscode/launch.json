{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome 3000 - no-cert check",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--disable-web-security",
        "--ignore-certificate-errors",
        "--auto-ssl-client-auth"
      ]
    },
    {
      "name": "Launch Chrome https://xpsdeb:8443",
      "type": "chrome",
      "request": "launch",
      "url": "https://xpsdeb:8443",
      "runtimeArgs": [
        "--disable-web-security",
        "--ignore-certificate-errors",
        "--auto-ssl-client-auth"
      ],
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Firefox 3000",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "Launch Chrome 8443",
      "request": "launch",
      "type": "chrome",
      "url": "https://localhost:8443",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "Launch Client via NPM",
      "command": "cd client && npm start",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Launch Server TS",
      "command": "cd server && tsc && npm start",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "DEBUG": "true",
        "PORT_HTTPS": "8443",
        "DIR_PUB_STATIC": "../client/build",
        "DIR_RENDER_EJS": "/views"
      }
    },

    {
      "name": "Launch Server JS",
      "command": "cd server && node Server.js",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "DEBUG": "true",
        "PORT_HTTPS": "8443",
        "DIR_PUB_STATIC": "../client/build",
        "DIR_RENDER_EJS": "/views"
      }
    },
    {
      "name": "Launch Server4",
      "command": "cd server && node Server4.js",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Launch Server5",
      "command": "cd server && node Server5.js",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Launch VolaTALK HTTPS Peer & Push Server  ",
      "program": "${workspaceFolder}/server/Server3.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "env": {
        "DEBUG": "true",
        "PORT_HTTPS": "8443",
        "DIR_PUB_STATIC": "../client/public",
        "DIR_RENDER_EJS": "/views"
      }
    }
  ]
}
